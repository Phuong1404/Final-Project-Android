<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp">
            <ImageView
                android:layout_width="134dp"
                android:layout_height="150dp"
                android:layout_marginLeft="15dp"
                android:foreground="@drawable/corner"
                android:src="@drawable/product1"></ImageView>

            <TextView
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginLeft="42dp"
                android:layout_marginTop="121dp"
                android:background="@drawable/orange_fill__rounded_color">

            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="53dp"
                android:layout_marginTop="127dp"
                android:src="@drawable/star"></ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="123dp"
                android:text="3.8"
                android:textColor="@color/white"
                android:textSize="20dp"></TextView>

            <TextView
                android:layout_width="220dp"
                android:layout_height="55dp"
                android:layout_marginLeft="155dp"
                android:text="Hot Creamy Cappuccino Latte Ombe"
                android:layout_marginTop="10dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:id="@+id/Name"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tea, Lemon"
                android:textColor="#777777"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="63dp"
                android:id="@+id/Category">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="155dp"
                android:layout_marginTop="110dp"
                android:text="$12.6"
                android:textColor="@color/black"
                android:textSize="21dp"
                android:id="@+id/Price"
                android:textStyle="bold"></TextView>

            <TextView
                android:id="@+id/BtnBuy"
                android:layout_width="110dp"
                android:layout_height="47dp"
                android:layout_marginLeft="265dp"
                android:layout_marginTop="98dp"
                android:background="@drawable/green_fill__rounded_color"
                android:gravity="center"
                android:paddingLeft="37dp"
                android:text="Buy"
                android:textColor="@color/white"
                android:textSize="19dp"></TextView>

            <ImageView
                android:layout_width="37dp"
                android:layout_height="37dp"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="105dp"
                android:src="@drawable/page"></ImageView>
        </RelativeLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>