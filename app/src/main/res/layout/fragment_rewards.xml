<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Rewards">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <include layout="@layout/tool_bar"></include>
            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="160dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/green_fill__rounded_color_1">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="12dp"
                    android:text="Loyalty Cart"
                    android:textColor="@color/white"
                    android:textSize="19dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/accumulatedpoint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="290dp"
                    android:layout_marginTop="12dp"
                    android:text="4 / 5"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="53dp"
                    android:background="@drawable/white_fill__rounded_color">
                </TextView>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="90dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="53dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="7dp"
                        android:id="@+id/coffee_1"
                        android:src="@drawable/coffeecup"></ImageView>
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/coffee_2"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/coffeecup"></ImageView>
                    <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/coffee_3"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/coffeecup"></ImageView>
                    <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/coffee_4"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/coffeecup"></ImageView>
                    <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/coffee_5"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/coffeecup"></ImageView>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/logo1"></ImageView>
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_info_icon"
                    android:layout_marginLeft="325dp"
                    android:layout_marginTop="25dp">
                </ImageView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="43dp"
                    android:text="My Points"
                    android:textColor="@color/white"
                    android:textSize="24dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/points"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="56dp"
                    android:layout_marginTop="80dp"
                    android:text="87,550"
                    android:textColor="@color/white"
                    android:textSize="45dp"
                    android:textStyle="bold"></TextView>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="107dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="56dp"
                        android:layout_marginTop="156dp"

                        android:alpha="0.3"
                        android:background="@drawable/blur_transparent_color"

                        android:paddingLeft="14dp"
                        android:paddingTop="7dp"
                        android:paddingRight="14dp"
                        android:paddingBottom="8dp"
                        android:textColor="@color/white"></TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="70dp"
                        android:layout_marginTop="162dp"
                        android:text="Redeem Gift"
                        android:textColor="@color/white"
                        android:textStyle="bold"></TextView>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="History Reward"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_marginLeft="20dp"></TextView>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="280dp"
                        android:layout_marginTop="3dp"
                        android:text="Newest"
                        android:textColor="#04764E"
                        android:textSize="20dp"></TextView>

                    <ImageView
                        android:layout_width="13dp"
                        android:layout_height="13dp"
                        android:layout_marginLeft="356dp"
                        android:layout_marginTop="11.5dp"
                        android:src="@drawable/menuc"></ImageView>
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/listview_Reward">

                </ListView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"></RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>