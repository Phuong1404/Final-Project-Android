<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="35dp"
                    android:src="@drawable/signin"></ImageView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:text="Create an account"
                    android:textColor="@color/black"
                    android:textSize="27dp"
                    android:textStyle="bold"></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="Username"
                    android:textSize="17dp"></TextView>

                <EditText
                    android:layout_width="344dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="25dp"
                    android:maxLines="1"
                    android:padding="20dp"
                    android:paddingBottom="9dp"
                    android:text="info@example.com"
                    android:textSize="17dp"
                    android:background="@drawable/fill__rounded_color"></EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textSize="17dp"
                    android:layout_marginLeft="28dp"></TextView>

                <EditText
                    android:layout_width="344dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="25dp"
                    android:maxLines="1"
                    android:padding="20dp"
                    android:paddingBottom="9dp"
                    android:text="info@example.com"
                    android:textSize="17dp"
                    android:background="@drawable/fill__rounded_color"></EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="Password"
                    android:textSize="17dp"></TextView>

                <EditText
                    android:layout_width="344dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="25dp"
                    android:maxLines="1"
                    android:padding="20dp"
                    android:paddingBottom="9dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textSize="17dp"
                    android:background="@drawable/fill__rounded_color"></EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="110dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:text="Confirm Password"
                    android:textSize="17dp"></TextView>

                <EditText
                    android:layout_width="344dp"
                    android:layout_height="70dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="19dp"
                    android:layout_marginRight="25dp"
                    android:maxLines="1"
                    android:padding="20dp"
                    android:paddingBottom="9dp"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:textSize="17dp"
                    android:background="@drawable/fill__rounded_color"></EditText>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="57dp"
                    android:background="@drawable/grey_fill__rounded_color"
                    android:layout_marginLeft="28dp"
                    android:layout_marginRight="28dp"
                    android:text="SIGN UP"
                    android:textColor="#646464"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18dp"
                    android:layout_marginTop="17dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="30dp"></TextView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>